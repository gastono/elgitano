<script src="~/ViewModels/NewProductViewModel.js"></script>
<script src="~/ViewModels/CommonViewModel.js"></script>

<div class="gridContainer clearfix"></div>

<div id="vmContent">
    <div class="container-fluid">
        <div class="tabbable" id="tabs-448459">
            <div class="tab-content">
                <div class="tab-pane active" id="panel-533528" data-bind="css:{active : CategoriaVisibility }">
                    <div class=" row">
                        <div class="col-md-6">

                            <div class="panel panel-primary">
                                <div class="panel-heading">
                                    <h3 class="panel-title">
                                        Categorias
                                    </h3>
                                </div>
                                <div class="panel-body">
                                    <div class="list-group">
                                        <!-- ko foreach: Categorias -->
                                        <a href="#" class="list-group-item"><span data-bind="text:Descripcion(), click: $parent.GetSubCategorias"></span></a>
                                        <!-- /ko -->
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="panel panel-primary">
                                <div class="panel-heading">
                                    <h3 class="panel-title">
                                        Sub-Categorias
                                    </h3>
                                </div>
                                <div class="panel-body">
                                    <div class="list-group">
                                        <!-- ko foreach: SubCategorias -->
                                        <a href="#" class="list-group-item"><span data-bind="text:Descripcion()"></span></a>
                                        <!-- /ko -->
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <button type="button" class="btn btn-primary btn-block" data-bind="click: BtnSiguiente">
                                Siguiente
                            </button>
                        </div>
                    </div>
                </div>
                <div class="tab-pane" id="panel-280320" data-bind="css:{active : SubCategoriaVisibility }">
                    <div class="row">
                        <div class="col-md-12">

                            <div class="jumbotron">
                                <h1>ASP.NET Web API - File Upload</h1>
                                <div class="row">
                                    <div class="col-md-12" style="font-size:medium">
                                        <div class="form-group">
                                            <label class="col-md-2 control-label">Archivo:</label>
                                            <div class="col-md-10">
                                                <input id="inputFile" type="file" multiple="multiple" />
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="col-md-offset-2 col-md-10">
                                                <input type="submit" value="Crear Publicacion" id="btnUpload" data-bind="click: BtnCrearPublicacion" class="btn btn-default" />
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div> 
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <button type="button" class="btn btn-primary btn-block" data-bind="click: BtnAtras">
                                Atras
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

